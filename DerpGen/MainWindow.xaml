<Window x:Class="DerpGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DerpGen"
        mc:Ignorable="d"
        Title="MainWindow" Height="442" Width="784.667">


	<Grid Background="#303030">
		<DockPanel>
			<Menu DockPanel.Dock="Top">
				<MenuItem Header="_File">
					<MenuItem Header="_New" />
					<MenuItem Header="_Open" Click="OnLoad"/>
					<MenuItem Header="_Save" Click="OnSave"/>
					<MenuItem Header="_Save as..." />
					<MenuItem Header="_Export as PNG" />
					<Separator />
					<MenuItem Header="_Exit" />
				</MenuItem>

				<MenuItem Header="_Edit">
					<MenuItem Header="_Undo" />
					<MenuItem Header="_Reddo" />
				</MenuItem>
			</Menu>
			<TextBox AcceptsReturn="True" />
		</DockPanel>

		<Grid Margin="10,30,10,10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="250" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<StackPanel Grid.Column="0">
				<TextBlock Text="Noise Settings" HorizontalAlignment="Center" Margin="0,0,0,20" FontSize="16"/>

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<StackPanel Grid.Column="0">
						<TextBlock Text="Map Size" Margin="3.1"/>
						<TextBlock Text="Seed" Margin="3.1"/>
						<TextBlock Text="Noise Scale" Margin="3.1"/>
						<TextBlock Text="Octaves" Margin="3.1"/>
						<TextBlock Text="Persistence" Margin="3.1"/>
						<TextBlock Text="Lacunarity" Margin="3.1"/>
					</StackPanel>

					<StackPanel Grid.Column="1">
						<TextBox Name="inpSize" Margin="2" Text="{Binding MapSize, Mode=TwoWay }"/>

						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<TextBox Name="inpSeed" Margin="2" Text="{Binding Seed, Mode=TwoWay }" Grid.Column="0"/>
							<Button Content="Random" Grid.Column="1" Margin="2" Click="RandomizeSeed"/>
						</Grid>
						<TextBox Name="inpScale" Margin="2" Text="{Binding Scale, Mode=TwoWay}"/>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="90" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<Slider Name="inpOct" Margin="2" Minimum="1" Maximum="10" Value="{Binding Octaves, Mode=TwoWay}" Grid.Column="0" />
							<TextBox Margin="2" Text="{Binding Octaves, Mode=TwoWay}" Grid.Column="1"/>
						</Grid>

						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="90" />
								<ColumnDefinition Width="3*" />
								<ColumnDefinition Width="4*"/>
							</Grid.ColumnDefinitions>
							<Slider Name="inpPer" Margin="2" Minimum="0" Maximum="1" Value="{Binding Persistence, Mode=TwoWay}" Grid.Column="0"/>
							<TextBox Margin="2" Text="{Binding Persistence, Mode=TwoWay}" Grid.Column="1" Grid.ColumnSpan="2"/>
						</Grid>
						<TextBox Name="inpLac" Margin="2" Text="{Binding Lacunarity, Mode=TwoWay}"/>
					</StackPanel>
				</Grid>

				<TextBlock Text="FallOff Settings" HorizontalAlignment="Center" Margin=" 0, 20, 0, 10"/>

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<StackPanel Grid.Column="0">
						<TextBlock Text="Radius" Margin="2"/>
					</StackPanel>

					<StackPanel Grid.Column="1">
						<TextBox Name="inpRadius" Margin="2"  Text="{Binding Radius, Mode=TwoWay}"/>
					</StackPanel>
				</Grid>

				<TextBlock Text="Offset Settings" HorizontalAlignment="Center" Margin=" 0, 20, 0, 10"/>

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<StackPanel Grid.Column="0">
						<TextBlock Text="Offset x" Margin="2"/>
						<TextBlock Text="Offset y" Margin="2"/>
					</StackPanel>

					<StackPanel Grid.Column="1">
						<TextBox Name="inpOffsetX" Margin="2" Text="0"/>
						<TextBox Name="inpOffsetY" Margin="2" Text="0"/>
					</StackPanel>
				</Grid>


			</StackPanel>

			<Button Content="Generate" Margin="5, 20" Click="UpdateHeightMap" VerticalAlignment="Bottom"/>

			<Grid Grid.Column="1">
				<Image x:Name="MainImage"/>
			</Grid>
		</Grid>
	</Grid>
</Window>
