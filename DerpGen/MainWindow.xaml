<Window x:Class="DerpGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DerpGen"
        mc:Ignorable="d"
        Title="MainWindow" Height="442" Width="784.667">


	<Grid Background="#303030">
		<DockPanel>
			<Menu DockPanel.Dock="Top">
				<MenuItem Header="_File">
					<MenuItem Header="_New" />
					<MenuItem Header="_Open" />
					<MenuItem Header="_Save" />
					<MenuItem Header="_Save as..." />
					<MenuItem Header="_Export as PNG" />
					<Separator />
					<MenuItem Header="_Exit" />
				</MenuItem>

				<MenuItem Header="_Edit">
					<MenuItem Header="_Undo" />
					<MenuItem Header="_Reddo" />
				</MenuItem>
			</Menu>
			<TextBox AcceptsReturn="True" />
		</DockPanel>

		<Grid Margin="10,30,10,10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="250" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<StackPanel Grid.Column="0">
				<TextBlock Text="Noise Settings" HorizontalAlignment="Center" Margin="0,0,0,10"/>

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<StackPanel Grid.Column="0">
						<TextBlock Text="Seed" Margin="2"/>
						<TextBlock Text="Noise Scale" Margin="2"/>
						<TextBlock Text="Octaves" Margin="2"/>
						<TextBlock Text="Persistence" Margin="2"/>
						<TextBlock Text="Lacunarity" Margin="2"/>
					</StackPanel>

					<StackPanel Grid.Column="1">
						<TextBox Name="inpSeed" Margin="2" Text="{Binding }"/>
						<TextBox Name="inpScale" Margin="2" Text="200"/>
						<TextBox Name="inpOct" Margin="2" Text="3"/>
						<TextBox Name="inpPer" Margin="2" Text="0"/>
						<TextBox Name="inpLac" Margin="2" Text="0"/>
					</StackPanel>
				</Grid>

				<TextBlock Text="FallOff Settings" HorizontalAlignment="Center" Margin=" 0, 20, 0, 10"/>

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<StackPanel Grid.Column="0">
						<TextBlock Text="Radius" Margin="2"/>
					</StackPanel>

					<StackPanel Grid.Column="1">
						<TextBox Name="inpRadius" Margin="2"  Text="10"/>
					</StackPanel>
				</Grid>

				<TextBlock Text="Offset Settings" HorizontalAlignment="Center" Margin=" 0, 20, 0, 10"/>

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<StackPanel Grid.Column="0">
						<TextBlock Text="Offset x" Margin="2"/>
						<TextBlock Text="Offset y" Margin="2"/>
					</StackPanel>

					<StackPanel Grid.Column="1">
						<TextBox Name="inpOffsetX" Margin="2" Text="0"/>
						<TextBox Name="inpOffsetY" Margin="2" Text="0"/>
					</StackPanel>
				</Grid>

			</StackPanel>

			<StackPanel Grid.Column="1">
				<Image x:Name="MainImage" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0"/>
			</StackPanel>
		</Grid>
	</Grid>
</Window>
